{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceRoot}/src/FosterScript.csproj",
                "-o", "./bin",
                "-v", "m"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "cleanbuild",
            "command": "C:/Windows/System32/cmd.exe",
            "type": "process",
            "args": [
                "/C",
                "rd", "/S", "/Q", "${workspaceRoot}\\src\\obj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "build"
            ]
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceRoot}/src/FosterScript.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}